{
    "name": "FlowTab",
    "description": "A beautiful and elegant new tab for your browser.",
    "version": "1.0",
    "manifest_version": 3,
    "chrome_url_overrides": {
        "newtab": "pages/dashboard.html"
    },
    "action": {
        "default_popup": "pages/settings_popup.html"
    },
    "icons": { "16": "assets/logo16.png", "48": "assets/logo48.png", "128": "assets/logo128.png" },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "topSites"]
}